@model  CheckToolsCORE.Models.ClaimViewModel
 @{
    ViewBag.Title="User Roles" ;
 }

<h2>Claims per utente @Html.DisplayFor(model => model.Utente.UserName)</h2>
<hr />

@using (Html.BeginForm("UserRoles", "Account", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-10">
                
            </div>
        </div>


        <hr />

        <table>

            <tr>
                <th>
                    Sel.
                </th>
                <th>
                    Tipo Claim
                </th>
                <th>
                    Valore
                </th>
            </tr>
            @foreach (var item in Model.Claims)
            {
        <tr>
            <td>
                
            </td>
            <td>
                @item.ClaimType
            </td>


            <td>
                @item.ClaimValue   
            </td>
        </tr>
             

            }
            
        </table>
        <br />
        <hr />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

